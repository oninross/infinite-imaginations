        block content

    block scripts
        script(src='/assets/infiniteimaginations/js/main.js')

        script#toaster-template(type='text/template')
            .toaster(class='toaster{{= it.ind }}')
                .container
                    p {{! it.message }}
                    button.js-dismiss
                        span.vh Close
                        i.icon.icon-cross

        script#case-study-template(type='text/template')
            .case-study__section.tldr
                .wrap
                    .col.col-12
                        img(src='{{! it.image }}', alt='{{! it.title }}')
                        h2 TLDR;
                        hr
                        i.pattern
                        p {{= it.tldr }}
                        | {{? it.url.live }}
                        a.cta(href='{{! it.url.live }}', data-text='visit website', target='_blank') visit website
                        | {{? }}
                    .tldr-sub.col.col-6
                        .case-study__section.technology
                            h3 Technology Used
                            hr
                            i.pattern
                            ul
                                | {{~it.technology :value:index }}
                                li {{=value}}
                                | {{~}}
                    .tldr-sub.col.col-6
                        .case-study__section.role
                            h3 Role
                            hr
                            i.pattern
                            p {{! it.role }}
            | {{? it.challenges }}
            .case-study__section.challenges
                h2 Challenges
                hr
                i.pattern
                | {{~it.challenges :value:index }}
                p {{=value}}
                | {{~}}
                | {{? }}
                | {{? it.solutions }}
            .case-study__section.solutions
                h2 Solutions
                hr
                i.pattern
                | {{~it.solutions :value:index }}
                p {{=value}}
                | {{~}}
            | {{? }}
            .case-study__section.navigation
                .wrap
                    .col.col-12
                        a(href='{{! it.nextItem.url}}')
                            .navigation-label
                                | next:
                                span {{! it.nextItem.title }}
                            i.line
                            i.navigation-shadow
                            .navigation-icon
                                i.icon.icon-chevron-right
                                i.icon.icon-chevron-right
                    .col.col-12
                        a.js-back-to-listing(href='/#/{{! it.category }}/')
                            .navigation-label back to listing
                            i.line
                            i.navigation-shadow
                            .navigation-icon
                                i.icon.icon-chevron-right
                                i.icon.icon-chevron-right





